{
    "layer": "top",
    "position": "top",
    "output": "HDMI-A-1",
    // "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 40,
    "modules-left": [
        "wlr/workspaces",
        "clock",
        "hyprland/language"
        // "custom/weather",
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        // "keyboard-state",
        "network",
        "temperature",
        "cpu",
        "memory",
        "disk",
        // "custom/power_profile",
        // "backlight",
        "pulseaudio",
        //"pulseaudio#microphone",
        "tray"
    ],
    "hyprland/window": {
        "format": "{}"
    },
    "keyboard-state": {
        "numlock": false,
        "capslock": false,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name}: {icon}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "Ôâ®",
            "3": "ÔÑ°",
            "4": "ÔÜº",
            "5": "ÔÅµ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "custom/power_profile": {
        //shows the current power profile and switches to next on click
        "exec": "asusctl profile -p | sed s:'Active profile is'::",
        "interval": 30,
        "format": "Û∞àê{}",
        "on-click": "asusctl profile -n; pkill -SIGRTMIN+8 waybar",
        "signal": 8
    },
    "custom/weather": {
        //shows the current weather and forecast
        "tooltip": true,
        "format": "{}",
        "interval": 30,
        "exec": "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type": "json"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": [
            "Ôóù",
            "Ôóû",
            "Ôóü"
        ],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Ô°´ {volume}%",
        "format-source-muted": "Ô°¨ Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    "temperature": {
        "thermal-zone": 1,
        "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input",
        "format": "Ôãá {temperatureC}¬∞C",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C Ôãá"
    },
    "wlr/workspaces": {
         "sort-by-number": true,
         "format": "{icon}",
         "on-click": "activate"
    },
    "custom/security": {
        "exec": "waybar-security",
        "return-type": "json",
        "interval": "once"
    },
    "custom/progress": {
        "exec": "waybar-progress",
        "return-type": "json",
        "interval": 1
    },
    "custom/usbguard": {
        "format-icons": {
            "icon": "<span foreground='#928374'>Ôäá </span>"
        },
        "format": "{icon}{}",
        "exec": "waybar-usbguard",
        "return-type": "json",
        "on-click": "waybar-usbguard allow",
        "on-click-right": "waybar-usbguard reject"
    },
    "custom/systemd": {
        "exec": "waybar-systemd",
        "return-type": "json",
        "interval": 10
    },
    "custom/updates": {
        "format-icons": {
            "icon": "<span foreground='#928374'>Ôíû </span>"
        },
        "format": "{icon}{}",
        "exec": "waybar-updates show",
        "return-type": "json",
        "signal": 1,
        "on-click-right": "waybar-updates refresh",
        "interval": "once"
    },
    "custom/vpn": {
        "exec": "waybar-vpn",
        "return-type": "json"
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "<span foreground='#928374'>ÔûÉ</span> {:%a, %d %b  <span foreground='#928374'>ÔÄó </span> %H:%M}"
    },
    "cpu": {
        "format": "<span foreground='#928374'>Ôãõ</span>  {usage}%",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "disk": {
        "format": "<span foreground='#928374'>ÔáÄ</span>  {percentage_used}%",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "memory": {
        "format": "<span foreground='#928374'>Ôî∏</span> {}%",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "hyprland/language": {
        // "format": "{flag}",
        "min-length": 3
    },
    "network": {
        "interval": 2,
        "interface": "enp3s0",
        "format-wifi": "<span foreground='#928374'>Ôá´</span> {essid}",
        "format-ethernet": "<span foreground='#928374'>Ôûñ</span> ÔÑÉ {bandwidthDownBits} ÔÑÇ {bandwidthUpBits}",
        "format-linked": "<span foreground='#928374'>Ôûñ</span> {ifname}",
        "format-disconnected": " <span foreground='#928374'>ÔÅû</span> ",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "<span foreground='#928374'>{icon}</span>  {volume}%",
        "format-muted": "üîá sssh..",
        "scroll-step": 1,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "env LIBGL_ALWAYS_SOFTWARE=1 helvum"
    }
}